<article class="product">
  <header>
    <%= link_to product_path(product) do %>
      <%= image_tag product.image.thumb.url , alt: product.name %>
      <h1>
        <span><%= product.name %></span>
        <span><%= humanized_money_with_symbol product.price %></span>
      </h1>
    <% end%>
  </header>

  <footer class="actions">
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn
    btn-primary' , method: :post do %> <%= fa_icon "shopping-cart", text: 'Add'
    %> <% end %> <%= link_to product, class: 'btn btn-default pull-right' do %>
    Details &raquo; <% end %>
  </footer>

  <aside class="price"><%= humanized_money_with_symbol product.price %></aside>

  <p class="description"><%= product.description %></p>
  <div>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
</article>
